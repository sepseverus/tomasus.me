---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import getPostsByCategory from "@/utils/getPostsByCategory";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
// Show 6 most recent posts in the RECENT section
const recentPosts = sortedPosts.slice(0, 6);

const techPosts = getPostsByCategory(posts, "Tech");
const brainPosts = getPostsByCategory(posts, "Brain");
const historyPosts = getPostsByCategory(posts, "History");

const categories = [
  {
    name: "Tech",
    slug: "tech",
    count: techPosts.length,
  },
  {
    name: "Brain",
    slug: "brain",
    count: brainPosts.length,
  },
  {
    name: "History",
    slug: "history",
    count: historyPosts.length,
  },
];
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <!-- Banner Image -->
    <section class="pt-4 pb-6">
      <img
        src="/banner.png"
        alt="Tomasus - AI, cybersecurity, and focus"
        class="w-full rounded-lg object-cover h-28 sm:h-32"
        width="1200"
        height="128"
      />
    </section>

    <!-- Compact Category Pills -->
    <section id="categories" class="pb-8 border-b border-border">
      <div class="flex flex-wrap items-center gap-3">
        <span class="text-sm font-medium text-foreground/60">Browse:</span>
        {
          categories.map(category => (
            <a
              href={`/categories/${category.slug}`}
              class="inline-flex items-center gap-2 rounded-full border border-border bg-muted/30 px-4 py-2 text-sm font-medium text-foreground transition-all hover:border-accent hover:bg-muted/50 hover:text-accent"
            >
              {category.name}
              <span class="text-foreground/50">({category.count})</span>
            </a>
          ))
        }
      </div>
    </section>

    <!-- Recent Posts Section -->
    {
      recentPosts.length > 0 && (
        <section id="recent" class="pt-10 pb-10 border-b border-border">
          <h2 class="section-label mb-6">RECENT</h2>
          <ul class="grid gap-6 sm:grid-cols-2">
            {recentPosts.map(data => (
              <Card {...data} />
            ))}
          </ul>
        </section>
      )
    }

    <!-- All Posts Button -->
    <div class="my-10 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
