---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getPostsByCategory from "@/utils/getPostsByCategory";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");

  const categories: Array<{
    category: "Tech" | "Wellbeing";
    slug: string;
    description: string;
  }> = [
    {
      category: "Tech",
      slug: "tech",
      description: "Cybersecurity, AI, and technology insights",
    },
    {
      category: "Wellbeing",
      slug: "wellbeing",
      description: "Mental health, biohacking, and wellness practices",
    },
  ];

  return categories.flatMap(({ category, slug, description }) => {
    const categoryPosts = getPostsByCategory(posts, category);

    return paginate(categoryPosts, {
      params: { category: slug },
      props: { categoryName: category, description },
      pageSize: SITE.postPerPage,
    });
  });
}

const params = Astro.params;
const { category } = params;
const { page, categoryName, description } = Astro.props;
---

<Layout title={`${categoryName} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={categoryName}
    titleTransition={category}
    pageDesc={description}
  >
    <h1 slot="title" transition:name={category}>{categoryName}</h1>
    <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
