---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconBook from "@/assets/icons/IconBook.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LogoNotebook from "@/assets/icons/LogoNotebook.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  // Exact match
  if (currentPath === path) return true;

  // For category pages, require exact category match
  if (path.startsWith("/categories/")) {
    return currentPath.startsWith(path);
  }

  // For other pages, match first segment
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());
  return currentPathArray[0] === pathArray[0];
};
---

<a
  id="skip-to-content"
  href="#main-content"
  class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
>
  Skip to content
</a>

<header
  class="app-layout flex flex-col items-center justify-between sm:flex-row"
>
  <div
    id="top-nav-wrap"
    class:list={[
      "py-4 sm:py-6",
      "border-b border-border",
      "relative w-full bg-background",
      "flex items-baseline justify-between sm:items-center",
    ]}
  >
    <a
      href="/"
      class="absolute py-1 flex items-center gap-2 text-xl leading-8 font-light uppercase tracking-[0.15em] whitespace-nowrap sm:static sm:my-auto sm:text-2xl sm:leading-none"
    >
      <LogoNotebook class="w-6 h-6 sm:w-7 sm:h-7" />
      {SITE.title}
    </a>
    <nav
      id="nav-menu"
      class="flex w-full flex-col items-center sm:ms-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
    >
      <button
        id="menu-btn"
        class="focus-outline self-end p-2 sm:hidden"
        aria-label="Open Menu"
        aria-expanded="false"
        aria-controls="menu-items"
      >
        <IconX id="close-icon" class="hidden" />
        <IconMenuDeep id="menu-icon" />
      </button>
      <ul
        id="menu-items"
        class:list={[
          "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
          "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
          "hidden",
          "sm:mt-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
        ]}
      >
        <li class="col-span-2">
          <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
            Posts
          </a>
        </li>
        <li class="col-span-2">
          <a href="/categories/tech" class:list={{ "active-nav": isActive("/categories/tech") }}>
            Tech
          </a>
        </li>
        <li class="col-span-2">
          <a href="/categories/brain" class:list={{ "active-nav": isActive("/categories/brain") }}>
            Brain
          </a>
        </li>
        <li class="col-span-2">
          <a href="/categories/history" class:list={{ "active-nav": isActive("/categories/history") }}>
            History
          </a>
        </li>
        <li class="col-span-2">
          <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
            About
          </a>
        </li>
        {
          SITE.showArchives && (
            <li class="col-span-2">
              <LinkButton
                href="/archives"
                class:list={[
                  "focus-outline flex justify-center p-3 sm:p-1",
                  {
                    "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                  },
                ]}
                title="Archives"
                aria-label="archives"
              >
                <IconArchive class="hidden sm:inline-block" />
                <span class="sm:sr-only">Archives</span>
              </LinkButton>
            </li>
          )
        }
        <li class="col-span-1 flex items-center justify-center">
          <LinkButton
            href="/search"
            class:list={[
              "focus-outline flex p-3 sm:p-1",
              { "[&>svg]:stroke-accent": isActive("/search") },
            ]}
            title="Search"
            aria-label="search"
          >
            <IconSearch />
            <span class="sr-only">Search</span>
          </LinkButton>
        </li>
        {
          SITE.lightAndDarkMode && (
            <li class="col-span-1 flex items-center justify-center">
              <button
                id="theme-btn"
                class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                title="Toggle theme (dark/light/sepia)"
                aria-label="auto"
                aria-live="polite"
              >
                <IconSunHigh id="icon-sun" class="theme-icon absolute top-[50%] left-[50%] -translate-[50%] transition-all" />
                <IconMoon id="icon-moon" class="theme-icon absolute top-[50%] left-[50%] -translate-[50%] transition-all hidden" />
                <IconBook id="icon-book" class="theme-icon absolute top-[50%] left-[50%] -translate-[50%] transition-all hidden" />
              </button>
            </li>
          )
        }
      </ul>
    </nav>
  </div>
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  function updateThemeIcons() {
    const theme = document.documentElement.getAttribute("data-theme") || "dark";
    const iconSun = document.querySelector("#icon-sun");
    const iconMoon = document.querySelector("#icon-moon");
    const iconBook = document.querySelector("#icon-book");

    if (!iconSun || !iconMoon || !iconBook) return;

    // Hide all icons first
    iconSun.classList.add("hidden");
    iconMoon.classList.add("hidden");
    iconBook.classList.add("hidden");

    // Show the icon for the current theme
    if (theme === "light") {
      iconSun.classList.remove("hidden");
    } else if (theme === "sepia") {
      iconBook.classList.remove("hidden");
    } else {
      // dark (default)
      iconMoon.classList.remove("hidden");
    }
  }

  // Watch for theme changes
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.attributeName === "data-theme") {
        updateThemeIcons();
      }
    });
  });

  observer.observe(document.documentElement, { attributes: true });

  toggleNav();
  updateThemeIcons();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", () => {
    toggleNav();
    updateThemeIcons();
  });
</script>
